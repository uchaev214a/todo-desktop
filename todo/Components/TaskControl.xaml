<UserControl x:Class="todo.Components.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:todo"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Border x:Name="fon" Background="White" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Canvas Grid.Column="0" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" Width="20" Height="20">
                    <Ellipse Width="20" Height="20" StrokeThickness="2" Stroke="#FF5656AF" />
                </Canvas>

                <Canvas x:Name="check" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Width="20" Height="20">
                    <Ellipse Width="20" Height="20" StrokeThickness="2" Fill="#FFFF5454" />
                    <Line X1="5" X2="10" Y1="9" Y2="14" StrokeThickness="2" Stroke="White" />
                    <Line X1="9" X2="16" Y1="14" Y2="7" StrokeThickness="2" Stroke="White" />
                </Canvas>

                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock x:Name="task_title" FontSize="14" Margin="5,5,5,0" VerticalAlignment="Center">Go fishing with Stephen</TextBlock>
                    <TextBlock x:Name="task_time" Grid.Row="1" Margin="5,0,5,10" FontSize="12" VerticalAlignment="Top" Foreground="#FF7F7F7F">9:23</TextBlock>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</UserControl>