<Window x:Class="todo.Create_task"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo"
        mc:Ignorable="d"
        Title="Create_task" Height="600" Width="800"
        Background="LightGray">
    <Window.Resources>
        <Style x:Key="border1" TargetType="Border">
            <Setter Property="Margin" Value="20,0,10,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>

        <Style x:Key="border2" TargetType="Border">
            <Setter Property="Margin" Value="20,0,10,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>

        <Style x:Key="txb1" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="170" />
                <RowDefinition/>
            </Grid.RowDefinitions>

            <DatePicker x:Name="dp_date" Grid.Row="1" BorderThickness="1" BorderBrush="Black" Margin="20" />

            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Margin="20">
                <StackPanel>
                    <Label Content="TimePicker" HorizontalAlignment="Center" FontSize="20"/>

                    <Border Style="{StaticResource border1}">
                        <TextBox x:Name="txb_timepicker" Style="{StaticResource txb1}"/>
                    </Border>

                </StackPanel>

            </Border>

            <Button x:Name="btn_back" Grid.Row="3" Height="50" Foreground="White" Margin="30,55,30,30" Background="Red" FontSize="20" Click="Button_Click">Отмена
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

        </Grid>

    <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="170"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                <Label FontSize="20" Margin="30,0,0,0" VerticalAlignment="Bottom" >Название
                </Label>
                <Border Style="{StaticResource border1}">
                <TextBox x:Name="txb_title" Style="{StaticResource txb1}"/>
                </Border>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom" Grid.Row="2">
                <Label Margin="30,0,0,0" FontSize="20" Content="Категория"/>
                <Border Style="{StaticResource border1}">
                    <TextBox x:Name="txb_category" Style="{StaticResource txb1}"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="3" VerticalAlignment="Bottom">
                <Label Content="Описание" Margin="30,0,0,0" FontSize="20"/>
                <Border Style="{StaticResource border2}">
                    <TextBox x:Name="txb_description" Style="{StaticResource txb1}"/>
                </Border>
            </StackPanel>

            <Button x:Name="btn_task_crate" Grid.Row="4" Height="50" Foreground="White" Margin="30" Background="#0fc40c" FontSize="20" Click="btn_task_crate_Click"> Создать
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
