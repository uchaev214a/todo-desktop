<Window x:Class="todo.MainEmpty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo"
        mc:Ignorable="d"
        Title="MainEmpty" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="1"
                   FontSize="32"> Добро пожаловать!
            </Label>
            <Label Grid.Row="2"
                   FontSize="32"> Создайте свою первую задачу!
            </Label>
            <Button Grid.Row="4"
                    x:Name="create_first_task"
                    Background="#FFF96060"
                    Foreground="White"
                    Margin="0,0,150,0"
                    Height="60"
                    FontSize="20">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources> Создать первую задачу
            </Button>
        </Grid>
        <Image Grid.Column="0" Source="Images/profile.png" VerticalAlignment="Top" Margin="20,20,0,0"/>
    </Grid>
</Window>
