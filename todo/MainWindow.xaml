<Window x:Class="todo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo"
        mc:Ignorable="d"
        Title="Вход" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Grid.Row="1" Grid.Column="0" Source="/Images/logo.png"/>

        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="32" VerticalAlignment="Bottom">Добро пожаловать!
            </Label>
            <Label Grid.Row="1" FontSize="20" VerticalAlignment="Bottom">Почта
            </Label>
            <TextBox x:Name="mailbox1"
                     Grid.Row="2"
                     Height="40" 
                     VerticalAlignment="Top" 
                     VerticalContentAlignment="Bottom" 
                     BorderThickness="0,0,0,1"
                     BorderBrush="Black"
                     FontSize="20"
                    
                     Margin="0,0,100,0">
            </TextBox>
            <Label Grid.Row="3" FontSize="20" VerticalAlignment="Bottom">Пароль
            </Label>
            <PasswordBox x:Name="passbox1"
                Grid.Row="4"
         Height="40" 
         VerticalAlignment="Top" 
         VerticalContentAlignment="Bottom" 
         BorderThickness="0,0,0,1"
         BorderBrush="Black"
         FontSize="20"
      
         Margin="0,0,100,0">
            </PasswordBox>
            <Label x:Name="resetpass1" Grid.Row="5" FontSize="18" HorizontalAlignment="Right" Margin="0,0,95,0" VerticalAlignment="Top">Восстановить пароль
            </Label>
            <Button x:Name="loginbut1"
                Grid.Row="6"
                    Margin="0,0,100,0" 
                    Height="60"
                    Foreground="White"
                    Background="#FFF96060" 
                    FontSize="20"
                    Content="Войти">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20,20,5,5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="regbut1"
                Grid.Row="7"
        Margin="0,0,100,0" 
        Foreground="White"
        FontSize="20"
                    Height="60"
        Background="#FFF96060" 
        Content="Зарегистрироваться">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5,5,20,20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
